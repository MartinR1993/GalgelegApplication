<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:text="Indstillinger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/indstillingerKnap"
            android:layout_marginBottom="26dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/frontscreen"
            android:id="@+id/imageView"
            android:layout_above="@+id/hjalepKnap"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp" />

        <Button
            android:text="Spil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spilKnap"
            android:layout_above="@+id/hjalepKnap"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="HjÃ¦lp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hjalepKnap"
            android:layout_above="@+id/indstillingerKnap"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
